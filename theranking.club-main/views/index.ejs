<head>
      <%- include('./partials/scripts'); %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta charset="utf-8" />
  <title>Password?</title>
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <style>
    body{
      display: flex;
    }
  </style>
</head>
<body>
  <div style="display:flex; flex-direction:column; align-items: center; margin-top: -200px;">
    <image src="logo.png" style="min-width: 300px;width: 45%; height: 45%;align-items: center; margin-bottom: 50px; border: none; padding-top: 5%; "></image>
  <div class="container">

     <form action="/login" method="POST" class="form" id="login">
            <h1 class="form__title">Password</h1>
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <input id="password" name="password" type="text" class="form__input" autofocus placeholder="Password">
                <div class="form__input-error-message"></div>
            
            <button class="form__button" type="submit">Continue</button>
            
            
        </form>
  </div>
</div>

</body>